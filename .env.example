# Prisma (Supabase Postgres)
# - DATABASE_URL: Supavisor Transaction mode (port 6543), used by Serverless runtime
# - DIRECT_URL: Supavisor Session mode (port 5432), used by Prisma migrations
#
# In Transaction mode, Prisma must disable prepared statements:
#   add pgbouncer=true
DATABASE_URL="postgresql://prisma.[PROJECT_REF]:[PRISMA_PASSWORD]@[DB_REGION].pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=1"
DIRECT_URL="postgresql://prisma.[PROJECT_REF]:[PRISMA_PASSWORD]@[DB_REGION].pooler.supabase.com:5432/postgres"

# NextAuth
NEXTAUTH_SECRET="replace-me"
NEXTAUTH_URL="http://localhost:3000"

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Email (SMTP)
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM="BestResume <noreply@example.com>"

# Rate limiting
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""
UPSTASH_KV_REST_API_URL=""
UPSTASH_KV_REST_API_TOKEN=""
MAX_LOGIN_ATTEMPTS="5"
LOGIN_WINDOW_MS="900000"
LOGIN_BLOCK_DURATION_MS="900000"
